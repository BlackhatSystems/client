// @flow
import {Component} from 'react'

type MarkdownComponentType =
  | 'inline-code'
  | 'code-block'
  | 'link'
  | 'text'
  | 'bold'
  | 'italic'
  | 'strike'
  | 'emoji'
  | 'native-emoji'
  | 'quote-block'

export type MarkdownCreateComponent = (
  type: MarkdownComponentType,
  key: string,
  children: React$Element<any>,
  options: {href?: string}
) => ?React$Element<any>

export type Props = {
  children?: string,
  preview?: boolean, // if true render a simplified version
  style?: any,
  allowFontScaling?: boolean,
}

export default class Markdown extends Component<Props, void> {}
